@model BForms.Docs.Areas.Demo.Models.UserProfileContactEditableModel

@using BForms.Docs.Helpers
@using BForms.Html
@using BForms.Models


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @using (Html.BsBeginForm(null, null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "usercontacteditable" }, Html.GetTheme()))
        {
            <div class="form-group">
                @Html.BsLabelFor(m => m.Mail, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.User)
                        @Html.BsInputFor(m => m.Mail)
                        @Html.BsValidationFor(m => m.Mail)

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.Website, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.Lock)
                        @Html.BsInputFor(m => m.Website)
                        @Html.BsValidationFor(m => m.Website)

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default bs-savePanel">Save</button>
                    <button type="submit" class="btn btn-danger pull-right bs-cancelEdit">Cancel</button>
                </div>
            </div>}

    </div>
</div>
