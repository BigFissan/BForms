@model ContributorsViewModel
@using BForms.Docs.Resources
@using BForms.Html
@using BForms.Grid
@using BForms.Models
@using BForms.Docs.Areas.Demo.Helpers
@using BForms.Docs.Areas.Demo.Models
       
@{
    var baseBuilder = new BsGridHtmlBuilder<ContributorsViewModel, ContributorRowModel>().HtmlAttributes(new Dictionary<string, object> { { "class", "cutom" } });
}
                                     
@(Html.BsGridFor(m => m.Grid)
        .MultipleSelectActions(Html.Partial("Grid/_Actions").ToString())
        .HtmlAttributes(new Dictionary<string, object>() { { "class", "custom_class" } })
        .RowHighlighter(row => row.Enabled ? "#59b444" : "#f0ad4e")
        .RowData(row => new Dictionary<string, object> { { "data-objid", row.Id }, { "data-active", row.Enabled } })
        .ConfigureColumns(cf =>
        {
            cf.Add(c => c.Name).Name(Resource.Name)
                                .SetWidth(2)
                                .Sortable();
            
            cf.Add(c => c.Role).Name("Role")
                                .SetWidth(3)
                                .Sortable()
                                .Text(x => Html.GetRoleIcon(x.Role) + " " + Html.BsEnumDisplayName(x.Role));
            
            cf.Add(c => c.StartDate).Name("Contributor since")
                                .SetWidth(3)
                                .Sortable()
                                .Text(x => Html.BsGlyphicon(Glyphicon.Calendar) + " " + x.StartDate.ToMonthNameDate());
            
            cf.Add(c => c.Contributions).Name("Contributions")
                                .SetWidth(4)
                                .Sortable()
                                .Text(x => string.IsNullOrEmpty(x.Contributions) ? "" : String.Join(", ", x.Contributions.Split(new[] { ',' }).Take(2)));
                        
            cf.For(c => c.Name).Name(Resource.Name);
        })
)
