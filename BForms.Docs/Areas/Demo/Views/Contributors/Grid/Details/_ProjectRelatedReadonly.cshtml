@using BForms.Docs.Resources
@using BForms.Html
@using BForms.Docs.Areas.Demo.Helpers
@using BForms.Docs.Areas.Demo.Models
@model BForms.Docs.Areas.Demo.Models.ContributorDetailsModel

<div class="bs-readonly">
    <dl>
        <dt>role &nbsp;</dt>
        <dd>@Html.GetRoleIcon(Model.Role) @Model.Role.ToString()</dd>
    </dl>
    <dl>
        <dt>contributor since &nbsp;</dt>
        <dd>@Model.ContributorSince.ToShortDateString()</dd>
    </dl>
    @if (Model.Languages != null)
    {
        <dl>
            <dt>languages &nbsp;</dt>
            <dd>@String.Join(", ", Model.Languages.ToArray())</dd>
        </dl>
    }
    @if (!string.IsNullOrEmpty(Model.Contributions))
    {
        <dl>
            <dt>contributions &nbsp;</dt>
            <dd>@Model.Contributions</dd>
        </dl>
    }
</div>
