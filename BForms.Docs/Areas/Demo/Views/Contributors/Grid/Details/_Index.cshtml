@using BForms.Docs.Resources
@using BootstrapForms.Html
@using BootstrapForms.Models
@model BForms.Docs.Areas.Demo.Models.ContributorDetailsModel

<div class="row row_more">
    <div class="col-lg-3">
        <div id="contributor_identity" class="grid_details description js-editableIdentity">
            <h3 class="editable">@Html.BsGlyphicon(Glyphicon.User) Identity</h3>

            @Html.BsPartialPrefixed(x => x, "Grid/Details/_IdentityReadonly", Model, "x" + Model.Id.ToString())

            @Html.BsPartialPrefixed(x => x, "Grid/Details/_IdentityEditable", Model, "x" + Model.Id.ToString())
            
        </div>
    </div>

    <div class="col-lg-5">
        <div id="contributor_project" class="grid_details description js-editableProject">
            <h3 class="editable">@Html.BsGlyphicon(Glyphicon.Tags) Project related</h3>

            @Html.BsPartialPrefixed(x => x, "Grid/Details/_ProjectRelatedReadonly", Model, "x" + Model.Id.ToString())

            @Html.BsPartialPrefixed(x => x, "Grid/Details/_ProjectRelatedEditable", Model, "x" + Model.Id.ToString())

        </div>
    </div>

    <div class="col-lg-4">
        <div id="contributor_contributions" class="grid_details description js-editableContributions">
            <h3 class="editable">@Html.BsGlyphicon(Glyphicon.Stats) Contributions</h3>

            @Html.BsPartialPrefixed(x => x, "Grid/Details/_ContributionsReadonly", Model, "x" + Model.Id.ToString())

            @Html.BsPartialPrefixed(x => x, "Grid/Details/_ContributionsEditable", Model, "x" + Model.Id.ToString())

        </div>
    </div>

    <div class="col-lg-12">
        <hr />
        @{
            var stateText = Model.Enabled ? Resource.Disable : Resource.Enable;
            var enabled = Model.Enabled;
        }
        <button type="button" class="btn btn-default js-btn_state" data-enabled="@enabled.ToString().ToLower()">@stateText</button>
        <button type="button" class="btn btn-default js-btn_delete">@Resource.Delete</button>
        <div class="popover fade bottom in">
            <div class="arrow"></div>
            <div class="popover-content">
                <p>@Resource.DeleteQuestion</p>
                <hr />
                <button type="button" class="btn btn-primary js-confirm">@Resource.Yes</button>
                <button type="button" class="btn btn-default js-cancel">@Resource.No</button>
            </div>
        </div>
    </div>
</div>
