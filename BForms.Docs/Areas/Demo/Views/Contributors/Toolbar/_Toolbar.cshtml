@model BForms.Docs.Areas.Demo.Models.ContributorsViewModel
@using BForms.Docs.Helpers
@using BForms.Docs.Resources
@using BForms.Grid
@using BForms.Html
@using BForms.Models

@(Html.BsToolbarFor(x => x.Toolbar)
    .DisplayName("Dev Team")
    .SetTheme(Html.GetTheme())
    .ConfigureActions(ca =>
    {
        ca.AddButtonGroup(buttonGroup =>
        {
            buttonGroup.DisplayName("Options").GlyphIcon(Glyphicon.Cog);

            buttonGroup.Add(BsToolbarActionType.Order)
               .Text(Resource.Order)
               .Tab(x => Html.BsPartialPrefixed(y => y.Order, "Toolbar/_Order", x));

            buttonGroup.AddActionLink()
               .Text("User profile")
               .GlyphIcon(Glyphicon.User)
               .Action(Url.Action("Index", "UserProfile"));
        });
        
        ca.Add(BsToolbarActionType.Add)
         .Text(Resource.Add)
         .Tab(x => Html.BsPartialPrefixed(y => y.New, "Toolbar/_New", x));

        ca.Add<BsToolbarQuickSearch>()
          .Placeholder(Resource.BF_Search);

        ca.Add(BsToolbarActionType.AdvancedSearch)
            .XsText(Resource.AdvancedSearch)
          .Tab(x => Html.BsPartialPrefixed(y => y.Search, "Toolbar/_Search", x));
    })
)
