@using BootstrapForms.HtmlHelpers
@using BootstrapForms.Models
@model BForms.Docs.Areas.Demo.Models.LoginModel
@{
    ViewBag.Title = "Authentication";  
}
<div>

    <div>
        <h1>@Html.BsGlyphicon(Glyphicon.StartEmpty) Login form</h1>
    </div>

    @using (Html.BeginForm("Authentication", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "bs-form" }))
    {
        <div class="form-container">
            @Html.BsFormValidation()

            <div class="form-group @Html.BsValidationCssFor(m => m.UserName)">
                @Html.BsLabelFor(m => m.UserName)
                <div class="input-group">
                    @Html.BsGlyphiconAddon(Glyphicon.User)
                    @Html.BsTextBoxFor(m => m.UserName)
                    @Html.BsValidationFor(m => m.UserName)
                </div>
            </div>

            <div class="form-group @Html.BsValidationCssFor(m => m.Password)">
                @Html.BsLabelFor(m => m.Password)
                <div class="input-group">
                    @Html.BsGlyphiconAddon(Glyphicon.GLock)
                    @Html.BsTextBoxFor(m => m.Password)
                    @Html.BsValidationFor(m => m.Password)
                </div>
            </div>

            <div>
                <hr />
                <button class="btn btn-default" type="submit">Login</button>
            </div>

        </div>
    }
</div>

<div class="row">

    <div class="col-12 col-sm-12 col-lg-12 bs-form_title">
        <h1>@Html.BsGlyphicon(Glyphicon.StartEmpty) Register form</h1>
    </div>

    @using (Html.BeginForm("Authentication", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "bs-form" }))
    {
        <div class="form-container">
            @Html.BsFormValidation()

            <div class="col-12 col-sm-6 col-lg-6 form-group @Html.BsValidationCssFor(m => m.UserName)">
                @Html.BsLabelFor(m => m.UserName)
                <div class="input-group">
                    @Html.BsGlyphiconAddon(Glyphicon.User)
                    @Html.BsTextBoxFor(m => m.UserName)
                    @Html.BsValidationFor(m => m.UserName)
                </div>
            </div>

            <div class="col-12 col-sm-6 col-lg-6 form-group @Html.BsValidationCssFor(m => m.Password)">
                @Html.BsLabelFor(m => m.Password)
                <div class="input-group">
                    @Html.BsGlyphiconAddon(Glyphicon.GLock)
                    @Html.BsTextBoxFor(m => m.Password)
                    @Html.BsValidationFor(m => m.Password)
                </div>
            </div>

            <div class="col-12 col-sm-12 col-lg-12">
                <hr />
                <button class="btn btn-primary" type="submit">Register</button>
                <button class="btn btn-danger pull-right" type="button">Cancel</button>
            </div>
        </div>
    }
</div>