@model BForms.Docs.Areas.Demo.Models.UsersViewModel
@using BForms.Docs.Resources
@using BootstrapForms.Grid
@using BootstrapForms.Html

@(Html.BsToolbarFor(x => x.Toolbar).DisplayName(Resource.Users)
    .ConfigureActions(ca =>
    {
        ca.Add(BsToolbarActionType.Add)
            .Text(Resource.Add)
            .Tab(Html.BsPartialPrefixed(x => x.Toolbar.New, "_New", Model).ToString());
        ca.Add(BsToolbarActionType.Refresh)
            .Text(Resource.Reset);
        ca.Add(BsToolbarActionType.Search)
            .Text(Resource.Search)
            .Tab(Html.BsPartialPrefixed(x => x.Toolbar.Search, "_Search", Model).ToString());
    })
    .Render()
)
