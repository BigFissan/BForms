@using BForms.Docs.Areas.Demo.Models
@using BForms.Html
@using BForms.Docs.Resources
@using BForms.Models
@using BForms.Grid
@using BForms.Docs.Areas.Demo.Controllers
@model BForms.Docs.Areas.Demo.Models.GroupEditorModel
@using BForms.Editor

@{
    var builder = (BsEditorHtmlBuilder<GroupEditorModel>)ViewData["builder"];
}

@(Html.BsGroupEditorFor(Model, builder)
      .HtmlAttributes(new Dictionary<string, object>() { { "id", "myGroupEditor" } })
      .ConfigureTabs(cfg =>
        {
            var tab3 = cfg.For(x => x.Contributors3)
                .PagerSettings(new BsPagerSettings
                {
                    HasPagesText = false
                });

            tab3.QuickSearch = true;
        }))
